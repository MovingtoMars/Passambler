class Greeter(name, manner="Hello")
{
    func Greet()
    {
        writeln(self.manner + " " + self.name);
    }
}

g = Greeter("Raoul");
g.Greet();

a = Greeter(manner="Goodmorning", name="Passambler");
a.Greet();

g.Greet();

writeln(a);

writeln(g);

class Sayer(msg="Hello world")
{
    func Say(n)
    {
        writeln(n + " " + self.msg);
    }

    func SayMore()
    {
        for (1..3) {
            writeln(self.msg);
        }
    }

    func private()
    {
        writeln("private");
    }
}

s = Sayer("test");
s.Say("Raoul");

x = Sayer();
x.Say("Raoul");

y = Sayer(msg="test 2");
y.Say("Raoul");

class Sayer2() : Sayer("How are you?")
{
    func Say2(x)
    {
        self.Say(x);
        self.private();
    }
}

z = Sayer2();
z.Say2("Raoul");

